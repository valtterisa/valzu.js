{
  "name": "my-valzu-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build:server": "tsc",
    "build:client": "esbuild src/client.tsx --bundle --minify --outfile=.valzu/client.js --format=esm --platform=browser --external:fs --external:path --external:net --external:http --external:events --external:url --external:querystring --external:zlib --external:crypto --external:stream --external:util",
    "build": "npm run build:server && npm run build:client",
    "start": "NODE_ENV=production node .valzu/server.js",
    "dev:client": "NODE_ENV=development esbuild src/client.tsx --bundle --minify --outfile=.valzu/client.js --format=esm --platform=browser --external:fs --external:path --external:net --external:http --external:events --external:url --external:querystring --external:zlib --external:crypto --external:stream --external:util --watch",
    "dev:server": "NODE_ENV=development ts-node --esm .valzu/server.dev.ts",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\""
  },
  "files": [
    ".valzu",
    "pages",
    "public",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "valzu-core": "^1.0.14"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "esbuild": "^0.15.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
